{
  "name": "mls",
  "version": "0.1.0",
  "description": "MeiliSearch Library for Svelte - A comprehensive component library for managing MeiliSearch instances",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "npm run test:unit",
    "test:unit": "vitest",
    "test:unit:watch": "vitest watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "meilisearch": "^0.35.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.0",
    "fast-check": "^4.3.0",
    "meilisearch": "^0.37.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^2.0.0",
    "storybook": "^10.1.2",
    "@storybook/sveltekit": "^10.1.2",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.1.2",
    "@storybook/addon-docs": "^10.1.2",
    "eslint-plugin-storybook": "^10.1.2",
    "playwright": "^1.57.0",
    "@vitest/browser": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "meilisearch",
    "search",
    "components",
    "library",
    "admin",
    "monitoring",
    "vector-search",
    "hybrid-search"
  ],
  "author": "Raudbjorn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Raudbjorn/mls.git"
  },
  "bugs": {
    "url": "https://github.com/Raudbjorn/mls/issues"
  },
  "homepage": "https://github.com/Raudbjorn/mls#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
